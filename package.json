{
  "name": "macaco",
  "version": "0.0.11",
  "description": "A Magic Card Collection Software",
  "main": "index.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish always"
  },
  "author": "Eric Mauser",
  "license": "MIT",
  "devDependencies": {
    "electron": "^23.0.0",
    "electron-builder": "^23.6.0",
    "electron-rebuild": "^3.2.7",
    "standard": "^17.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^8.0.1",
    "jimp": "^0.16.2",
    "jszip": "^3.10.1"
  },
  "standard": {
    "globals": [ "core", "frontend", "filters", "popups", "customElements", "HTMLElement", "IntersectionObserver", "CSSStyleSheet" ]
  },
  "build": {
    "appId": "shagu.macaco",
    "productName": "Macaco",
    "artifactName": "${name}-${version}-${os}.${ext}",
    "extraResources": [
      "foil.png"
    ],
    "dmg": {
      "writeUpdateInfo": false
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": [
        "portable"
      ]
    }
  }
}
